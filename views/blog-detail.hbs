<html>

<head>
  <title>Blog Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="../public/assets/css/style-all-blog.css" />
</head>

<body>
  <!-- NavBar -->
  <nav class="navbar navbar-expand-sm navbar-light bg-light">
    <div class="container">
      <a href="/" class="navbar-brand">
        <img src="../public/assets/img/logo.png" alt="logo" />
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active text-orange" aria-current="page" href="/blog">Blog</a>
          </li>
        </ul>
        <a href="contact" class="btn text-white bg-orange px-3">Contact Me</a>
      </div>
  </nav>
  <!-- Akhir Navbar -->

  <!-- Blog -->
  <div class="blog-detail">
    <div class="blog-detail-container">
      <h1> {{blog.title}} </h1>
      <div class="author"> {{blog.postAt}} | {{blog.author}} </div>
      <img src="../public/assets/img/blog-img-detail.png" alt="detail" />
      <p>
        {{blog.content}}
      </p>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
  <script src="../public/assets/js/blog.js"></script>
</body>

</html>