    <div class="container-fluid d-flex align-items-center justify-content-center">

        <div class="container-form">
            <p class="h2 text-center mb-5">Edit Blog Post</p>

            <form action="/edit-blog/{{blog.id}}" method="post">

                <div class="mb-3">
                    <label for="inputTitle" class="form-label">Title</label>
                    <input name="inputTitle" value="{{blog.title}}" type="text" class="form-control" id="inputTitle">
                </div>

                <div class="mb-3">
                    <label for="inputContent" class="form-label">Content</label>
                    <textarea name="inputContent" class="form-control" id="inputContent"
                        rows="4">{{blog.content}}</textarea>
                </div>

                <div class="mb-3">
                    <label for="inputImage" class="form-label">Upload Image</label>
                    <input class="form-control" type="file" id="inputImage">
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
