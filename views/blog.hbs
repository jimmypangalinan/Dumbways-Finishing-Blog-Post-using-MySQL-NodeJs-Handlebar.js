<html>

<head>
    <title>Blog Page</title>
    {{!--
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    --}}
    <link rel="stylesheet" href="../public/assets/css/blog.css" />
</head>

<body>
    <!-- NavBar -->
    <nav>
        <div class="left-side">
            <a href="/">
                <img src="../public/assets/img/logo.png" alt="logo" />
            </a>
            <ul>
                <li>
                    <a href="/">Home</a>
                </li>
                <li>
                    <a href="/blog" class="list-active">Blog</a>
                </li>
            </ul>
        </div>



        <div class="right-side">

            <a href="/contact"> Contact Me </a>
        </div>
    </nav>



    {{#if messages.success}}
    <div class="alert alert-success" role="alert">
        {{messages.success}}
    </div>
    {{/if}}


    <!-- Blog -->
    <div class="blog">
        {{#if isLogin}}
        <div style="text-align:right; margin-right: 130px; margin-top: 50px">
            <a href="/add-blog"
                style="background-color: orangered; padding: 7px 20px; border-radius: 5px; color: white; text-decoration:none">Add
                New Blog</a>
        </div>
        {{/if}}

        <div id="contents" class="blog-list">
            <!-- dynamic content -->
            {{!-- untuk pengulangan/loping untuk menampilkan sebanyak panjang array --}}
            {{#each blogs}}
            <div class="blog-list-item">
                <div class="blog-image">
                    <img src="../public/assets/img/blog-img.png" alt="gambar" />
                </div>
                <div class=" blog-content">

                    {{#if isLogin}}
                    <div class="btn-group">
                        <a href="/edit-blog/{{this.id}}" class="btn-edit">Edit Post</button>
                            <a href="/delete-blog/{{this.id}}" class="btn-post">Delete Blog</button>
                    </div>
                    {{/if}}

                    <h1>
                        <a href="/blog-detail/{{this.id}}" target="_blank"> {{this.title}} </a>
                    </h1>
                    <div class="detail-blog-content">
                        {{this.postAt}} | {{this.author}}
                    </div>
                    <p>
                        {{this.content}}
                    </p>
                    <div style="text-align: right;">
                        <span style="font-size: 13px; color: grey">
                            {{this.postAtDistance}}
                        </span>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    <script src="../public/assets/js/blog.js"></script>
</body>

</html>