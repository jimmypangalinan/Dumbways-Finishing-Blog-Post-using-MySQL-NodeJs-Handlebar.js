<html>

<head>
    <title>Add Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="../public/assets/css/style-contact.css" />
</head>

<body>


    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light ">
        <div class="container">
            <a class="navbar-brand text-white " href="/">JP</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link active text-white" aria-current="page" href="/">Home</a>
                    <a class="nav-link active text-white" aria-current="page" href="blog">Blog</a>
                </div>
            </div>
            <div>
                <a href="contact" class="btn btn-info">Contact Me</a>
            </div>
        </div>
    </nav>
    <!-- akhir navbar -->

    <!-- form -->
    <div class="container-fluid d-flex align-items-center justify-content-center">

        <div class="container-form">
            <p class="h2 text-center mb-5">Create Blog Post</p>

            <form action="/blog" method="post">

                <div class="mb-3">
                    <label for="inputTitle" class="form-label">Title</label>
                    <input name="inputTitle" type="text" class="form-control" id="inputTitle">
                </div>

                <div class="mb-5">
                    <label for="inputContent" class="form-label">Content</label>
                    <textarea name="inputContent" class="form-control" id="inputContent" rows="6"></textarea>
                </div>

                <div class="mb-3">
                    <label for="inputImage" class="form-label">Upload Image</label>
                    <input class="form-control" type="file" id="inputImage">
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button class="btn bg-orange text-white" type="submit" style="background-color: #2e5266ff;">Post
                        Blog</button>
                </div>

            </form>
        </div>

    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>